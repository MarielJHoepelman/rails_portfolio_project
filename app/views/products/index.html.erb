
<div class="user_products_wrapper">
  <h3><%= "Select from the list to add to your collection."  %></h3>

  <table class="table table-hover">
    <% @products.each do |p| %>
    <tr>
      <td><%=p.name%></td>
      <td><%= link_to "Add", new_product_user_product_path(p), type:"button", class:"btn btn-light btn-sm"%></td>
      <% end %>
    </tr>
  </table>
</div>

<div class="button_class">
  <%= link_to "Add a new product if it doesn't exist", new_category_product_path(@category), type:"button", class:"btn btn-dark"%>
</div>
<%= link_to "Back", user_category_user_products_path(current_user, @category), type:"button", class:"btn btn-light" %>
