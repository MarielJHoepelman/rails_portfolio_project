<div class="signup_wrapper">
    <div class="container">
      <h1>Sign Up</h1>

    <%= form_for @user, url: '/signup' do |f| %>

    <div class="form-group">
      <%= f.label :name %><br/>
      <%= f.text_field :name, class: "form-control", placeholder: "Enter your name here" %>
    </div>

    <div class="form-group">
      <%= f.label :email %><br/>
      <%= f.email_field :email, class: "form-control", placeholder: "Enter your email here" %>
    </div>

    <div class="form-group">
      <%= f.label :password %><br/>
      <%= f.password_field :password, class: "form-control", placeholder: "Enter your password here" %>
    </div>

    <div class="form-group">
      <%= f.submit "Sign In" %>
    </div>

    <% end %>
  </div>
</div>
